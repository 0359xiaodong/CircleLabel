<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <com.leo.circle_label.CircleLabel
        android:id="@+id/circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:backgroundcolor="#ff0000"/>

    <com.leo.circle_label.CircleLabel
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        app:backgroundcolor="#00ff00"/>

    <com.leo.circle_label.CircleLabel
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        app:backgroundcolor="#0000ff"/>

    <com.leo.circle_label.CircleLabel
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        app:backgroundcolor="#d54852"/>

    <com.leo.circle_label.CircleLabel
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_margin="10dp"
        app:backgroundcolor="#158636"/>

    <com.leo.circle_label.CircleLabel
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        app:backgroundcolor="#266589"/>

    <com.leo.circle_label.CircleLabel
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        app:backgroundcolor="#789633"/>

    <com.leo.circle_label.CircleLabel
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        app:backgroundcolor="#ff5869"/>

    <com.leo.circle_label.CircleLabel
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:backgroundcolor="#8723aa"/>

</LinearLayout>
